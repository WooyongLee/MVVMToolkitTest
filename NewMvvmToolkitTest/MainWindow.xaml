<Window x:Class="NewMvvmToolkitTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewMvvmToolkitTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel x:Name="SendPanel" Orientation="Vertical">
            <Button
                Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5" Content=" Send Message "
                Command="{Binding SendMessageCommand}">
            </Button>
        </StackPanel>
        <StackPanel x:Name="ReceivePanel" Grid.Row="1">
            <TextBlock x:Name="TextView" Text="{Binding ReceivedMessage}"></TextBlock>
            
        </StackPanel>
            
    </Grid>
</Window>
